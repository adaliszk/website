{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": ["vite/client", "storybooks"],
        "allowImportingTsExtensions": true,
        "jsx": "preserve",
        "moduleResolution": "Node16",
        "module": "CommonJS",
        "rootDir": "../"
    },
    "exclude": ["../**/*.spec.ts", "../**/*.test.ts", "../**/*.spec.tsx", "../**/*.test.tsx"],
    "include": [
        "../src/**/*.stories.tsx",
        "../src/**/*.stories.mdx",
        "../docs/**/*.mdx",
        "**/*.tsx",
        "**/*"
    ]
}
