{
    "private": true,
    "version": "0.8.0",
    "name": "@adaliszk.io/design",
    "description": "Collection of utility components and helpers on top of Tailwind.",
    "author": "Ádám Liszkai <website@adaliszk.dev>",
    "repository": "github:adaliszk/adaliszk.io",
    "license": "BSD 2-Clause",
    "type": "module",
    "scripts": {
        "format": "biome format --write . && biome lint --apply-unsafe ./src",
        "lint": "biome lint ./src",
        "build": "rm -rf dist lib && qwik build",
        "build.types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
        "build.lib": "vite build --mode lib",
        "build.docs": "storybook build",
        "dev": "storybook dev -p 6006 --no-open"
    },
    "trustedDependencies": ["sharp"],
    "peerDependencies": {
        "@builder.io/qwik": "^1.5",
        "@tailwindcss/typography": "^0.5",
        "tailwindcss": "^3.4",
        "@adaliszk/std": "workspace:*"
    },
    "dependencies": {
        "tailwind-merge": "~2.3.0",
        "@adaliszk/std": "workspace:*"
    },
    "devDependencies": {
        "@adaliszk/typescript": "^5.4.2",
        "@adaliszk/qwik": "^1.5.7",
        "@adaliszk/qwik-storybook": "^8.0.2",
        "@builder.io/qwik": "1.5.2",
        "@builder.io/qwik-city": "1.5.2",
        "@storybook/blocks": "^8.0.9",
        "@tailwindcss/typography": "^0.5.13",
        "tailwindcss": "^3.4.3",
        "storybook-framework-qwik": "^0.4.0",
        "storybook": "^8.0.10"
    },
    "files": ["dist", "*.md"],
    "types": "lib/bundle.d.ts",
    "qwik": "lib/bundle.js",
    "main": "lib/bundle.js"
}
