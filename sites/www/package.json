{
    "private": true,
    "name": "@adaliszk.io/www",
    "description": "The main website to showcase my work and blog posts.",
    "author": "Ádám Liszkai <website@adaliszk.dev>",
    "repository": "github:adaliszk/adaliszk.io",
    "license": "BSD 2-Clause",
    "type": "module",
    "scripts": {
        "build": "turbo build-deps && qwik build",
        "build.server": "vite build -c vite.ssg.config.ts",
        "build.client": "vite build --debug",
        "preview": "static-server ./dist",
        "format": "biome format --write . && biome lint --apply-unsafe ./src",
        "deploy.preview": "wrangler pages deploy",
        "deploy.live": "wrangler pages publish",
        "lint": "biome lint ./src",
        "dev": "vite --mode ssr"
    },
    "trustedDependencies": ["sharp"],
    "dependencies": {
        "@builder.io/qwik": "1.5.2",
        "@builder.io/qwik-city": "1.5.2",
        "darkreader": "^4.9.84",
        "undici": "^6.15.0"
    },
    "devDependencies": {
        "@adaliszk.io/content": "workspace:*",
        "@adaliszk.io/design": "workspace:*",
        "@adaliszk/qwik": "^1.5.7",
        "@adaliszk/std": "workspace:*",
        "@tailwindcss/typography": "^0.5.13",
        "tailwindcss": "^3.4.3"
    }
}
